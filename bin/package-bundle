#!/bin/bash

set -euo pipefail
set -x

probe-packages > PACKAGES.txt
probe-libs     > LIBS.txt
rm -vfr local/man local/cache
mkdir /build/$NAME
tar --transform "s@^@$NAME/@" \
    -zcf /build/$NAME/vendor.tar.gz \
    PACKAGES.txt \
    LIBS.txt \
    cpanfile \
    cpanfile.* \
    local \
    vendor
